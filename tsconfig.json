{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "paths": {
      "*": ["src/types/*", "node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
